<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="iitd.messfeeback.myapplication.submitRating"
    tools:showIn="@layout/activity_submit_rating"
    android:background="@color/colorSteelGreyDark"
    android:padding="20dp"
    >



    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="250dp"
        android:id="@+id/cv"
        android:padding="20dp"
        android:background="@drawable/circlecard"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/mess_type"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp"
            android:textColor="@color/colorNevada"
            android:id="@+id/messType"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/submit_feedback"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/roundbutton"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/colorSolitude"
            android:id="@+id/buttonSubmit"

            />




    </RelativeLayout>

</RelativeLayout>
